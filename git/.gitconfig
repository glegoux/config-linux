# ~/.gitconfig

[user]
	name = glegoux
	email = gilles.legoux@gmail.com
[color]
	ui = auto
[core]
	editor = vim
	whitespace = -trailing-space
[merge]
	ff = false
	tool = kdiff3
[alias]
	st = status -u
	ci = commit
	br = branch
	co = checkout
	rf = reflog
	lg = log -g --pretty=oneline --abbrev-commit
	df = diff --color-words=.
	slg = shortlog -sn
	unadd = reset HEAD --
	last = log -1 HEAD
	graph = log --graph --pretty=oneline --abbrev-commit --decorate
	home = !DIR=$(git rev-parse --show-toplevel) && sh -c 'cd $DIR'
	search = log --pretty=format:'%C(yellow)%h%Cred%d%Creset - %C(cyan)%an %Creset: %s %Cgreen(%cr)'
	show-commit = !sh 'git diff '$1'^ '$1
	show-stat-commit = !sh -c 'git diff-tree --no-commit-id --name-only -r '$1
	show-file = !sh -c 'git show '$1:$2
	short-id = !sh 'git rev-parse --short '$1
	long-id = !sh 'git rev-parse '$1
[commit]
	template = ~/.gitmessage.txt
[diff]
	mnemonicPrefix = true
	renames = true
[pull]
	rebase = preserve
[push]
	default = simple
