#    alias mysql=$(echo -e "mysql $(cat ~/.mysql-prompt | grep -v '^#\|^$')" \
#    --silent --table --auto-rehash --show-warnings --no-beep \
#    --column-type-info --debug-info \
#    --port=3306 --protocol=tcp \
